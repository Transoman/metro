{
  "name": "profi-dev-wp-theme",
  "version": "1.0",
  "description": "Profi.dev wordpress theme starter kit.",
  "author": "tech@profi.dev",
  "private": true,
  "scripts": {
    "lint:js": "eslint --ext .js ./",
    "lint:js:fix": "yarn lint:js --fix",
    "lint:styles": "stylelint \"**/*.{css,scss}\"",
    "lint:styles:fix": "yarn lint:styles --fix",
    "docker:cli": "docker-compose exec back bash",
    "docker:up": "docker-compose up",
    "docker:rebuild": "docker-compose rm -f && docker-compose build",
    "check:uploads": "docker-compose exec back bash -c 'wp eval-file --allow-root ./scripts/check-unused-uploads-files.php'",
    "delete:revisions": "docker-compose exec back bash -c 'wp revisions clean -1 --allow-root --hard'",
    "deploy:files": "docker-compose exec back bash -c 'cd /var/www/html/wp-content/ && zip -r uploads.zip uploads/* && wp --allow-root db export dump.sql && zip dump.zip dump.sql && rm -f dump.sql' && mv wp-content/uploads.zip . && mv wp-content/dump.zip .",
    "deploy:dump": "docker-compose exec back bash -c 'wp --allow-root db export dump.sql && zip dump.zip dump.sql && rm -f dump.sql && mv dump.zip wp-content' && mv wp-content/dump.zip .",
    "dev": "vite",
    "build": "vite build --mode production",
    "partytown": "partytown copylib wp-content/themes/profi.dev/~partytown"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^5.1.1",
    "autoprefixer": "^10.4.21",
    "dotenv": "^17.2.2",
    "eslint": "^9.35.0",
    "glob": "^11.0.3",
    "normalize.css": "^8.0.1",
    "sass": "^1.92.1",
    "stylelint": "^16.24.0",
    "stylelint-config-standard": "^39.0.0",
    "swiper": "^11.2.10",
    "vite": "^7.1.5",
    "vite-plugin-dev-manifest": "^1.4.1",
    "vite-plugin-live-reload": "^3.0.5"
  },
  "engines": {
    "node": ">=18",
    "npm": ">= 6.13.4",
    "yarn": ">= 1.21.1"
  },
  "dependencies": {
    "@googlemaps/markerclusterer": "^2.6.2",
    "@qwik.dev/partytown": "^0.11.2",
    "flatpickr": "^4.6.13",
    "grapesjs": "^0.22.12",
    "grapesjs-preset-newsletter": "^1.0.2",
    "qrcode": "^1.5.4"
  }
}
